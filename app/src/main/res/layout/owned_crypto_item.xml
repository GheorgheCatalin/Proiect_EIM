<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/et_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/owned_crypto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/teal_700"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/owned_crypto_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        tools:text="(BTC)"
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/owned_crypto_name"
        app:layout_constraintBottom_toBottomOf="@id/owned_crypto_name"
        app:layout_constraintLeft_toRightOf="@id/owned_crypto_name"
        android:layout_marginStart="10dp"
        />


    <TextView
        android:id="@+id/owned_crypto_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/gray2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/owned_crypto_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/owned_crypto_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textSize="18sp"
        android:textColor="@color/gray2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/owned_crypto_name"
        app:layout_constraintStart_toEndOf="@id/owned_crypto_amount_title"
        />

    <TextView
        android:id="@+id/owned_crypto_value_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/gray2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/owned_crypto_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/owned_crypto_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999.99 $"
        android:textSize="18sp"
        android:textColor="@color/gray2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/owned_crypto_amount"
        app:layout_constraintStart_toEndOf="@id/owned_crypto_value_title"
        android:maxLines="2"
        android:ellipsize="marquee"
        />

</androidx.constraintlayout.widget.ConstraintLayout>