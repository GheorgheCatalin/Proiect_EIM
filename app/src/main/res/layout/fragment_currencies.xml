<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bluishWhite">

    <EditText
        android:id="@+id/search_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/search_txt"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="200dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_filter_list_24"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/search_currency"
        app:layout_constraintBottom_toBottomOf="@id/search_currency"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/filter_icon_txt" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/bluishWhite"
        app:layout_constraintTop_toBottomOf="@id/search_currency"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>