<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bluishWhite"
    tools:context=".dashboard.fragments.AddCommentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_comm_fake_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/add_comm_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_back_24"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/back_button_txt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_comment_txt"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/add_comm_separator_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/add_comm_back_btn"
            android:background="@color/gray"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_comm_post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_background"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/add_comm_fake_bar">

       <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_face_24"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="@string/profile_image_txt" />

        <TextView
            android:id="@+id/addcomm_post_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="John Doe"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/addcomm_post_profession_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Profession"
            android:layout_marginStart="55dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_post_name_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_options"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/options_txt" />

        <TextView
            android:id="@+id/addcomm_post_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="60h ago"
            android:textSize="12sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_post_name_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/addcomm_post_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Post Title"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:maxLength="25"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@id/addcomm_post_time_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/addcomm_post_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Description "
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintWidth_max="315dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_post_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLines="3"
            android:ellipsize="marquee"
            />

        <View
            android:id="@+id/addcomm_separator_line_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_post_title_tv"
            android:background="@color/gray"
            />

        <LinearLayout
            android:id="@+id/addcomm_tag_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal"

            />

        <TextView
            android:id="@+id/addcomm_post_likes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textColor="@color/linkBlue"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_1"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/likes_txt"
            android:layout_marginStart="4dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_1"
            app:layout_constraintLeft_toRightOf="@id/addcomm_post_likes_tv"
            />

        <TextView
            android:id="@+id/addcomm_post_dislikes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textColor="@color/linkBlue"
            android:layout_marginStart="60dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_1"
            app:layout_constraintLeft_toRightOf="@id/addcomm_post_likes_tv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dislikes_txt"
            android:layout_marginStart="4dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_1"
            app:layout_constraintLeft_toRightOf="@id/addcomm_post_dislikes_tv"
            />

        <TextView
            android:id="@+id/addcomm_post_comments_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textColor="@color/linkBlue"
            android:layout_marginEnd="100dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_1"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comments_txt"
            android:layout_marginStart="4dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_1"
            app:layout_constraintLeft_toRightOf="@id/addcomm_post_comments_tv"
            />

        <View
            android:id="@+id/addcomm_separator_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_post_likes_tv"
            android:background="@color/gray"
            />

        <ImageView
            android:id="@+id/addcomm_post_like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_thumb_up_off_24"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="@string/thumbs_up_icon_txt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like_txt"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_2"
            app:layout_constraintLeft_toRightOf="@id/addcomm_post_like_icon"
            />

        <ImageView
            android:id="@+id/addcomm_post_dislike_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_thumb_down_off_24"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="140dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_2"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/thumbs_down_icon_txt" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dislike_txt"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_separator_line_2"
            app:layout_constraintLeft_toRightOf="@id/addcomm_post_dislike_icon"
            />

        <View
            android:id="@+id/addcomm_separator_line_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/addcomm_post_like_icon"
            android:background="@color/gray"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/add_comm_responses_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_comm_post_card"
        app:layout_constraintBottom_toTopOf="@id/comments_rv"
        android:background="@drawable/et_background"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:paddingVertical="4dp"
        >

        <TextView
            android:id="@+id/addcomm_post_comments_tv2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="0"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/responses_txt"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/random_order_txt"
            android:layout_marginStart="140dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_comm_responses_bar"
        app:layout_constraintBottom_toTopOf="@id/add_comm_leave_comm"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_comm_leave_comm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/comments_rv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="10dp"
        >

        <EditText
            android:id="@+id/add_comm_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/leave_a_comment_txt"
            android:background="@drawable/et_background"
            android:paddingHorizontal="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/add_comm_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_send_24"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>