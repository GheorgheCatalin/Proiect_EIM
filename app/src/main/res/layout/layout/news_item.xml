<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/et_background"
    android:layout_margin="20dp"
    android:paddingBottom="7dp">

    <ImageView
        android:id="@+id/medical_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medical_team"
        android:adjustViewBounds="true"
        android:maxWidth="400dp"
        android:maxHeight="140dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/medical_image_txt" />

    <TextView
        android:id="@+id/news_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/medical_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:maxLength="30"
        android:ellipsize="marquee"
        android:singleLine="true" />

    <TextView
        android:id="@+id/news_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Description "
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintWidth_max="315dp"
        app:layout_constraintTop_toBottomOf="@id/news_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="3"
        android:ellipsize="marquee"
        />

    <TextView
        android:id="@+id/news_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Discoveries"
        android:textColor="@color/black"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/news_name_tv"
        app:layout_constraintLeft_toLeftOf="@id/news_name_tv"
        android:background="@drawable/rounded_background_gray"
        />

    <TextView
        android:id="@+id/news_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Author"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/news_tag"
        app:layout_constraintLeft_toLeftOf="@id/news_tag"
        />

    <TextView
        android:id="@+id/news_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date"
        app:layout_constraintTop_toBottomOf="@id/news_author_tv"
        app:layout_constraintLeft_toLeftOf="@id/news_author_tv"
        />

    <ImageView
        android:id="@+id/saved_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_turned_in_not_24"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/share_icon"
        />

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_share_24"
        android:layout_marginStart="255dp"
        android:background="@drawable/ic_baseline_share_24"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>