<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/et_background"
    android:paddingBottom="7dp"
    android:layout_marginBottom="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_face_24"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/profile_image_txt" />

    <TextView
        android:id="@+id/comment_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="John Doe"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/comment_profession_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Profession"
        android:layout_marginStart="55dp"
        app:layout_constraintTop_toBottomOf="@id/comment_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_options"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/options_txt" />

    <TextView
        android:id="@+id/comment_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="60h ago"
        android:textSize="12sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/comment_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/comment_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Description "
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintWidth_max="315dp"
        app:layout_constraintTop_toBottomOf="@id/comment_time_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="3"
        android:ellipsize="marquee"
        />

    <ImageView
        android:id="@+id/comment_like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_thumb_up_off_24"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/comment_time_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/thumbs_up_icon_txt" />

    <TextView
        android:id="@+id/comment_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0"
        android:textColor="@color/black"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="@id/comment_like_icon"
        app:layout_constraintLeft_toRightOf="@id/comment_like_icon"
        />

    <TextView
        android:id="@+id/comment_dislike_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0"
        android:textColor="@color/black"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/comment_dislike_icon"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/comment_dislike_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_thumb_down_off_24"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/comment_time_tv"
        app:layout_constraintRight_toLeftOf="@id/comment_dislike_tv"
        android:contentDescription="@string/thumbs_down_icon_txt"
        />


</androidx.constraintlayout.widget.ConstraintLayout>