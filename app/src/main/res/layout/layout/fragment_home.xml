<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bluishWhite"
    tools:context=".dashboard.fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        >

        <TextView
            android:id="@+id/hello_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello User"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_txt"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="200dp"
            android:paddingVertical="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/hello_user_tv"
            app:layout_constraintLeft_toLeftOf="@id/hello_user_tv"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_filter_list_24"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/hello_user_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/filter_icon_txt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_category_txt"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/hello_user_tv"
            app:layout_constraintLeft_toLeftOf="@id/hello_user_tv"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/hello_user_tv"
            app:layout_constraintLeft_toLeftOf="@id/hello_user_tv"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/discoveries_tag"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/discoveries_txt"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/et_background"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:id="@+id/patients_tag"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/patients_txt"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/rounded_background_yellow"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:id="@+id/treatment_tag"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/treatment_txt"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/rounded_background_disabled"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/today_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more_txt"
            android:textColor="@color/linkBlue"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/hello_user_tv"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_txt"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/today_see_more"
            app:layout_constraintLeft_toLeftOf="@id/hello_user_tv"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/today_news_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/today_see_more"
            app:layout_constraintLeft_toLeftOf="@id/hello_user_tv"
            />

        <ProgressBar
            android:id="@+id/progress_bar_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/today_see_more"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/trending_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more_txt"
            android:textColor="@color/linkBlue"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/today_news_rv"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trending_txt"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/trending_see_more"
            app:layout_constraintLeft_toLeftOf="@id/hello_user_tv"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trending_news_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/trending_see_more"
            app:layout_constraintLeft_toLeftOf="@id/trending_see_more"
            />

        <ProgressBar
            android:id="@+id/progress_bar_trending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/trending_see_more"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/latest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latest_txt"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/trending_news_rv"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/latest_news_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/latest_tv"
            app:layout_constraintLeft_toLeftOf="@id/latest_tv"
            />

        <ProgressBar
            android:id="@+id/progress_bar_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/latest_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>