<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".dashboard.fragments.CreatePostFragment">

    <ImageView
        android:id="@+id/create_post_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_back_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_button_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_post_txt"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/create_post_add_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_txt"
        android:textSize="20sp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/create_post_separator_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_back_btn"
        android:background="@color/gray"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_face_24"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_separator_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/profile_image_txt" />

    <TextView
        android:id="@+id/create_post_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="John Doe"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_separator_line"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/create_post_profession_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Profession"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/create_post_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_txt"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:autofillHints="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/create_post_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_txt"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_title_et"
        app:layout_constraintLeft_toLeftOf="parent"
        android:autofillHints="Description"
        android:inputType="text" />

    <TextView
        android:id="@+id/create_post_tag1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="College"
        android:background="@drawable/rounded_background_gray"
        android:paddingHorizontal="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_description_et"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/create_post_tag2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Medicine"
        android:background="@drawable/rounded_background_gray"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_description_et"
        app:layout_constraintLeft_toRightOf="@id/create_post_tag1_tv"
        />

    <TextView
        android:id="@+id/create_post_tag3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Students"
        android:background="@drawable/rounded_background_gray"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/create_post_description_et"
        app:layout_constraintLeft_toRightOf="@id/create_post_tag2_tv"
        />

    <ImageView
        android:id="@+id/create_add_tag_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_post_description_et"
        android:contentDescription="@string/back_button_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_txt"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/create_add_tag_icon"
        app:layout_constraintLeft_toRightOf="@id/create_add_tag_icon"
        />

    <ImageView
        android:id="@+id/create_add_photo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_add_tag_icon"
        android:contentDescription="@string/back_button_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos_txt"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/create_add_photo_icon"
        app:layout_constraintLeft_toRightOf="@id/create_add_photo_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>